for_window [app_id="org.keepassxc.KeePassXC"] floating enable
for_window [app_id="virt-manager"] floating enable

set $mod Mod4
set $term alacritty
set $menu wmenu-run
#j4-dmenu-desktop
for_window [app_id="Alacritty"] move scratchpad, resize set 1130 810
for_window [app_id="Thunar"] move scratchpad, resize set 1462 914
bindsym $mod+space exec swaymsg [app_id="Alacritty"] scratchpad show
exec $term 

output eDP-1 scale 1.75
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}
#input type:keyboard {
#    repeat_delay 500
#    repeat_rate 5
#}

bindsym $mod+Return exec $term
bindsym $mod+b exec /opt/chromium/115Browser/115.sh --ozone-platform-hint=auto --enable-wayland-ime 
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
bindsym $mod+e exec thunar
bindsym $mod+c exec ELECTRON_OZONE_PLATFORM_HINT=auto code --enable-wayland-ime 
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaymsg exit

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6

bindsym $mod+Shift+l exec swaylock -c 000000
bindsym $mod+f fullscreen
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Shift+space floating toggle

bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym Print exec slurp | grim -g - - | wl-copy

bar {
    #height 48
    mode hide
    hidden_state hide
    position bottom
    status_command i3status
    modifier Mod2
}
default_border none
default_floating_border none

bindgesture swipe:3:right exec wtype -M alt -P right -p right -m alt 
bindgesture swipe:3:left exec wtype -M alt -P left -p left -m alt
bindgesture swipe:3:down exec wtype -M ctrl -k w -m ctrl
bindgesture swipe:3:up exec swaymsg [app_id="Alacritty"] scratchpad show
bindgesture swipe:4:right workspace prev
bindgesture swipe:4:left workspace next
bindgesture swipe:4:down kill
bindgesture swipe:4:up exec swaymsg [app_id="Thunar"] scratchpad show


include /etc/sway/config.d/*
